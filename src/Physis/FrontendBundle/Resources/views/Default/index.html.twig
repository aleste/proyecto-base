        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="icon-warning-sign"></i> {{ error.message }}
        </div>
    {% endif %}
  <div class="well">
      Bienvenido al {{ global.app.name }}
  </div>
{% endblock %}