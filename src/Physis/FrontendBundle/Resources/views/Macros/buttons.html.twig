{% macro show(url, text) %}
    <a href="{{ url }}" class="btn">
       <i class="icon-eye-open"></i>
        {{ text is empty ? 'base.show'|trans : text }}
    </a>
{% endmacro %}

{% macro create(url, text) %}
    <a href="{{ url }}" class="btn btn-primary">
        <i class="icon-plus-sign"></i>
        {{ text is empty ? 'base.create.create'|trans : text }}
    </a>
{% endmacro %}

{% macro edit(url, text) %}
    <a href="{{ url }}" class="btn btn-primary">
        <i class="icon-pencil"></i>
        {{ text is empty ? 'base.edit.edit'|trans : text }}
    </a>
{% endmacro %}

{% macro delete_confirm(url, delete_form, text) %}    
    {{form_start(delete_form)}}
        <button type="submit" class="btn btn-success" >
            <i class="icon-ok"></i>
            {{ text is empty ? 'base.accept'|trans : text }}
        </button>
    {{form_end(delete_form)}}
{% endmacro %}

{% macro delete(delete_form, text) %}
    <a href="#modal_delete_{{delete_form.vars.id}}" role="button" class="btn btn-danger" data-toggle="modal">
        <i class="icon-trash"></i> {{ text is empty ? 'base.delete.delete'|trans : text }}</a>
{% endmacro %}

{% macro delete_modal(url, delete_form, text, title, question) %}
    {% import _self as buttons %}
    <!-- Modal -->
    <div id="modal_delete_{{delete_form.vars.id}}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="modal_delete_{{delete_form.vars.id}}" aria-hidden="true">
    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="modal_delete_{{delete_form.vars.id}}">{{ title is empty ? 'base.delete.modal.title'|trans : title }}</h3>
    </div>
    <div class="modal-body">
    <p>{{ question is empty ? 'base.delete.modal.question'|trans : question }}</p>
    </div>
    <div class="modal-footer">
        {{ buttons.delete_confirm(url, delete_form, text) }}
        <button class="btn" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i> {{ 'base.cancel'|trans }}</button>        
    </div>
    </div>
{% endmacro %}

{% macro save(text) %}
    <button class="btn btn-default btn-success" type="submit"><i class="icon-save"></i> {{ text is empty ? 'base.save'|trans : text }}</button>
{% endmacro %}

{% macro back(url, text) %}
    <a href="{{ url }}" class="btn">
        <i class="icon-caret-left"></i>
        {{ text is empty ? 'base.back'|trans : text }}
    </a>
{% endmacro %}


