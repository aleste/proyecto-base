{% macro success(text) %}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4 class="alert-heading"><i class="icon-check-sign"></i> Operación exitosa</h4>
    {{ text }}
</div>
{% endmacro %}

