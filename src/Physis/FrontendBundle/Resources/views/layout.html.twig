{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% include '::_stylesheets.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        {% block header %}

            {% block navbar %}
                {% include 'FrontendBundle:Homepage:_navbar.html.twig' %}
            {% endblock %}

            {% block flashes %}
                {% for name, flashes in app.session.flashbag.all if name in ['success', 'error', 'fos_user_success'] %}
                    {% for flash in flashes %}
                        <div class="alert alert-{{ name == 'fos_user_success' ? 'success' : name }}">
                            <a class="close" data-dismiss="alert" href="#">Ã—</a>
                            {{ flash|trans }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}

        {% endblock %}

        {% block main %}
                <div class="row-fluid">
                    <div class="span12">
                        {% block content %}{% endblock %}
                    </div>
                </div>
        {% endblock %}

        {% block footer %}
            <footer>
                <div class="container">
                  <div class="row-fluid">
                    <div class="span12">
                        <hr>
                        <p class="text-center">{{ global.app.name }} - {{ global.app.version }}</p>
                    </div>
                  </div>
                </div>
            </footer>
        {% endblock %}
    </div>
{% endblock %}
