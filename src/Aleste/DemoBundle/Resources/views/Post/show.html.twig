{% extends 'FrontendBundle::layout.html.twig' %}
{% import 'FrontendBundle:Macros:alerts.html.twig' as alerts %}
{% import 'FrontendBundle:Macros:buttons.html.twig' as buttons %}

{% block content %}
    <h1>Post</h1>

    <table class="table table-condensed table-bordered table-striped record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>
    {{ buttons.delete(path('post_delete', { 'id': entity.id }), delete_form) }}
    {{ buttons.back(path('post')) }}
    {{ buttons.edit(path('post_edit', { 'id': entity.id })) }}
{% endblock %}
