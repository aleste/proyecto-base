{% extends 'FrontendBundle::layout.html.twig' %}
{% import 'FrontendBundle:Macros:alerts.html.twig' as alerts %}
{% import 'FrontendBundle:Macros:buttons.html.twig' as buttons %}

{% block content %}
    {{ dump(app.session.flashbag.get('noticia')) }}
    {% for flashMessage in app.session.flashbag.get('notice') %}
    {{flashMessage}}
    {% endfor %}
    <h1>Editar Post</h1>

    <form action="{{ path('post_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        
            
            
            <button class="btn btn-default btn-success" type="submit"><i class="icon-save"></i> Guardar</button>
            {{ buttons.back(path('post')) }}
            
        
    </form>
{{ buttons.delete_confirm(path('post_delete', { 'id': entity.id }), delete_form) }}
{% endblock %}
