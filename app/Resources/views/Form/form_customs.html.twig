{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4 class="alert-heading"><i class="icon-remove-sign"></i> El formulario contiene errores</h4>
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}